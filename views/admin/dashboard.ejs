<!doctype html>
<html lang="en">
<head>
  <meta charset="utf-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1" />

  <!-- Bootstrap & Tailwind -->
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" />
  <script src="https://cdn.tailwindcss.com"></script>

  <!-- Tailwind Config -->
  <script>
    tailwind.config = {
      prefix: 'tw-',
      corePlugins: { preflight: false },
      theme: {
        extend: {
          fontFamily: {
            mono: ['JetBrains Mono', 'monospace'],
            orbitron: ['Orbitron', 'mono'],
          },
          colors: {
            bg: '#0a0f1c',
            brand: '#00ff88',
            accent: '#00e5ff',
            purple: '#a855f7'
          },
          boxShadow: {
            neon: '0 0 0.5rem rgba(0,255,136,0.7),0 0 1.25rem rgba(0,229,255,0.4),inset 0 0 0 rgba(0,0,0,0)'
          }
        }
      }
    }
  </script>

  <!-- Font Awesome -->
  <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.0/css/all.min.css"/>

  <title>Admin Dashboard - MLSA DYPCET</title>
  <link rel="icon" href="assets/mlsa.jpeg">

  <style>
    body { background-color: #0a0f1c; color: white; font-family: 'JetBrains Mono', monospace; min-height: 100vh; display: flex; flex-direction: column; }
    .sidebar { background-color: rgba(14,21,48,0.9); width: 220px; min-height: 100vh; }
    .sidebar a { display: block; padding: 12px 20px; color: #94a3b8; border-radius: 8px; margin-bottom: 6px; text-decoration: none; transition: 0.3s; }
    .sidebar a:hover { background: rgba(0,229,255,0.1); color: #00ff88; }
    .topbar { background: rgba(10,15,28,0.85); backdrop-filter: blur(10px); padding: 12px 24px; border-bottom: 1px solid rgba(0,229,255,0.1); display: flex; justify-content: space-between; align-items: center; }
    .card { background: rgba(14,21,48,0.7); border: 1px solid rgba(0,229,255,0.25); border-radius: 12px; padding: 16px; box-shadow: 0 0 0.5rem rgba(0,255,136,0.7); margin-bottom: 20px; }
    .btn-brand { background: linear-gradient(135deg, #00ff88, #00e5ff); color: #0a0f1c; font-weight: 600; transition: all 0.3s; border: none; padding: 8px 16px; border-radius: 8px; }
    .btn-brand:hover { transform: translateY(-2px); box-shadow: 0 5px 15px rgba(0,229,255,0.3); }
  </style>
</head>

<body>
  <!-- Topbar -->
  <div class="topbar">
    <div class="tw-flex tw-items-center tw-gap-2">
      <img src="assets/mlsadypcet.png" alt="MLSA Logo" class="tw-h-10 tw-w-auto" />
      <span class="tw-text-white tw-font-bold tw-text-lg">MLSA Admin Dashboard</span>
    </div>
    <div>
      <button class="btn-brand"><i class="fa-solid fa-user-shield me-1"></i> Logout</button>
    </div>
  </div>

  <div class="tw-flex tw-flex-1">
    <!-- Sidebar -->
    <div class="sidebar tw-p-4">
      <a href="#"><i class="fa-solid fa-gauge me-2"></i> Dashboard</a>

<a href="/admin/events/new">
  <i class="fa-solid fa-calendar-plus me-2"></i> Add Event
</a>

<a href="/admin/events/manage">
  <i class="fa-solid fa-calendar-days me-2"></i> Manage Events
</a>

<!-- ðŸ”¥ NEW EVENT REGISTRATION TABS -->
<a href="/admin/event-registration/new">
  <i class="fa-solid fa-clipboard-list me-2"></i> Event Registration
</a>

<a href="/admin/event-registration/manage">
  <i class="fa-solid fa-list-check me-2"></i> Manage Registration
</a>

<a href="/admin/team/new">
  <i class="fa-solid fa-user-plus me-2"></i> Add Team
</a>

<a href="/admin/team/manage">
  <i class="fa-solid fa-users me-2"></i> Manage Team
</a>

     
    </div>

    <!-- Main Content -->
    <div class="tw-flex-1 tw-p-6 tw-overflow-auto">
      <h2 class="tw-text-2xl tw-font-orbitron tw-mb-4">Dashboard Overview</h2>

      <div class="tw-grid tw-grid-cols-1 md:tw-grid-cols-3 tw-gap-6">
        <div class="card">
          <h4>Upcoming Events</h4>
          <p>5 events scheduled</p>
        </div>
        <div class="card">
          <h4>Registered Users</h4>
          <p>120 users</p>
        </div>
        <div class="card">
          <h4>Teams</h4>
          <p>8 active teams</p>
        </div>
      </div>

      <div class="tw-mt-6">
        <h3 class="tw-text-xl tw-font-orbitron tw-mb-3">Recent Activity</h3>
        <div class="card">
          <ul>
            <li>John Doe added new event "Hackathon 2025"</li>
            <li>Jane Smith updated team "Web Dev Team"</li>
            <li>Mike Johnson registered for event "AI Workshop"</li>
          </ul>
        </div>
      </div>
    </div>
  </div>

  <!-- Footer -->
  <footer class="tw-pt-5 tw-pb-3 tw-text-[var(--muted)] tw-text-center">
    2025 MLSA - Admin Dashboard
  </footer>

  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>
