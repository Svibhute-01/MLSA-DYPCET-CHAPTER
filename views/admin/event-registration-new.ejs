<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />

    <!-- Bootstrap & Tailwind -->
    <link
      href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css"
      rel="stylesheet"
    />
    <script src="https://cdn.tailwindcss.com"></script>

    <!-- Tailwind Config -->
    <script>
      tailwind.config = {
        prefix: "tw-",
        corePlugins: { preflight: false },
        theme: {
          extend: {
            colors: {
              bg: "#0a0f1c",
              brand: "#00ff88",
              accent: "#00e5ff",
              purple: "#a855f7",
            },
            boxShadow: {
              neon: "0 0 0.5rem rgba(0,255,136,0.7),0 0 1.25rem rgba(0,229,255,0.4)",
            },
          },
        },
      };
    </script>

    <!-- Font Awesome -->
    <link
      rel="stylesheet"
      href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.0/css/all.min.css"
    />

    <title>Add Event Registration</title>

    <style>
      body {
        background-color: #0a0f1c;
        color: white;
        font-family: "JetBrains Mono", monospace;
      }
      .card {
        background: rgba(14, 21, 48, 0.8);
        border: 1px solid rgba(0, 229, 255, 0.25);
        border-radius: 14px;
        box-shadow: 0 0 0.5rem rgba(0, 255, 136, 0.7);
      }
      label {
        color: #94a3b8;
        font-size: 0.9rem;
      }
      .form-control,
      .form-select {
        background: transparent;
        color: white;
        border: 1px solid rgba(0, 229, 255, 0.4);
      }
      .form-control::placeholder {
        color: #64748b;
      }
    </style>
  </head>

  <body>
    <div class="container tw-py-12">
      <div class="row justify-content-center">
        <div class="col-lg-7 col-xl-6">
          <div class="card tw-p-5">
            <h3 class="tw-text-center tw-font-orbitron tw-text-2xl tw-mb-4">
              <i class="fa-solid fa-link tw-text-accent me-2"></i>
              Event Registration Setup
            </h3>

            <form
              action="/admin/event-registration/add"
              method="POST"
              enctype="multipart/form-data"
            >
              <!-- Event Selection -->
              <div class="mb-3">
                <label>Select Event</label>
                <select name="eventId" class="form-select" required>
                  <option value="">-- Select Event --</option>
                  <% events.forEach(event => { %>
                  <option value="<%= event.id %>">
                    <%= event.title %> <% if (event.date) { %> (<%= new
                    Date(event.date).toDateString() %>) <% } %>
                  </option>
                  <% }) %>
                </select>
              </div>

              <!-- Poster Upload -->
              <div class="mb-3">
                <label>Event Poster</label>
                <input
                  type="file"
                  name="poster"
                  class="form-control"
                  accept="image/*"
                  required
                />
              </div>

              <!-- Google Form Link -->
              <div class="mb-3">
                <label>Google Form Registration Link</label>
                <input
                  type="url"
                  name="registrationLink"
                  class="form-control"
                  placeholder="https://forms.gle/xxxx"
                  required
                />
              </div>

              <!-- Status -->
              <div class="mb-4">
                <label>Registration Status</label>
                <select name="isActive" class="form-select">
                  <option value="true">Active</option>
                  <option value="false">Inactive</option>
                </select>
              </div>

              <!-- Submit -->
              <div class="tw-text-center">
                <button
                  type="submit"
                  class="btn btn-brand tw-rounded-full tw-px-4"
                >
                  <i class="fa-solid fa-circle-plus me-1"></i>
                  Publish Registration
                </button>
              </div>
            </form>
          </div>
        </div>
      </div>
    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
  </body>
</html>
